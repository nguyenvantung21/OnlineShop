@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách người dùng
}


@section jsFooter{
    <script src="/Assets/Admin/js/controller/usercontroller.js"></script>
}
<div class="row form-control">
    <div class="col-lg-12">
        <div class="panel panel-default">

            @*<a href="/Admin/User/Create" class="btn btn-default btn-primary">Thêm mới người dùng</a>*@

            <!--panel-heading-->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "User", FormMethod.Get))
                {
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="input-group">
                                <div class="col-md-4">
                                    <a href="/Admin/User/Create" class="btn btn-default btn-primary">Thêm mới người dùng</a>

                                </div>
                                <div class="col-md-8 d-flex ">

                                    <input type="text" value="@ViewBag.searchString" name="searchString" placeholder="Search" />
                                    <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                </div>

                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive" style="margin-top:10px">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Mật khẩu</th>
                                <th>Tên</th>
                                <th>Địa chỉ</th>
                                <th>Email</th>
                                <th>Điện thoại</th>
                                <th>Trạng thái</th>
                                <th>Chức năng</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">

                                    <td>@item.UserName</td>
                                    <td>@item.Password</td>
                                    <td>@item.Name</td>
                                    <td>@item.Address</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status?"Kích hoạt":"Khóa")</a></td>   @*Call AJAX*@

                                    <td>
                                        <a href="/Admin/User/Edit/@item.ID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có chắc chắn xóa?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>

                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))
                </div>
            </div>
            <!--panel-heading-->
        </div>
    </div>
</div>