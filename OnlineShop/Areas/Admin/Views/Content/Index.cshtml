@model PagedList.IPagedList<Model.EF.Content>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách Content";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách content
}


@section jsFooter{
    <script src="~/Assets/Admin/js/controller/contentController.js"></script>
}
<div class="row form-control">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <!--panel-heading-->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Content", FormMethod.Get))
                {
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="input-group">
                                <div class="col-md-4">
                                    <a href="/Admin/Content/Create" class="btn btn-default btn-primary">Thêm mới content</a>

                                </div>
                                <div class="col-md-8 d-flex ">

                                    <input type="text" value="@ViewBag.searchString" name="searchString" placeholder="Search" />
                                    <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                </div>

                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive" style="margin-top:10px">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>MetaTitle</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>CategoryID</th>
                                <th>Detail</th>
                                <th>Warranty</th>
                                @*<th>CreatedDate</th>
                                <th>CreatedBy</th>
                                <th>ModifiedDate</th>
                                <th>ModifiedBy</th>
                                <th>MetaKeywords</th>*@
                                <th>MetaDescriptions</th>
                                <th>Status</th>
                                <th>TopHot</th>
                                <th>ViewCount</th>
                                <th>Tags</th>
                                <th>Chức năng</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">

                                    <td>@item.Name</td>
                                    <td>@item.MetaTitle</td>
                                    <td>@item.Description</td>
                                    <td>@item.Image</td>
                                    <td>@item.CategoryID</td>
                                    <td>@item.Detail</td>
                                    <td>@item.Warranty</td>
                                    @*<td>@item.CreatedDate</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.ModifiedDate</td>
                                    <td>@item.ModifiedBy</td>
                                    <td>@item.MetaKeywords</td>*@
                                    <td>@item.MetaDescriptions</td>
                                    <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status?"Kích hoạt":"Khóa")</a></td>   @*Call AJAX*@

                                    <td>@item.TopHot</td>
                                    <td>@item.ViewCount</td>
                                    <td>@item.Tags</td>

                                    <td>
                                        <a href="/Admin/Content/Edit/@item.ID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có chắc chắn xóa?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>

                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))
                </div>
            </div>
            <!--panel-heading-->
        </div>
    </div>
</div>