@model PagedList.IPagedList<Model.EF.Product>
    @using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách sản phẩm
    }
<div class="row form-control">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">


                @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                {
                    <div class="row">
                        <div class="input-group">
                            <div class="col-md-4">
                                <a href="/Admin/Product/Index" class="btn btn-primary">Thêm mới sản phẩm</a>

                            </div>

                            <div class="col-md-8 d-flex">
                                <input type="text" value="@ViewBag.searchString" name="searchString" placeholder="Search." />
                                <button type="submit" class="btn btn-primary btn-success">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>

                }
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>CategoryID</th>
                            <th>Detail</th>
                            <th>Status</th>
                            <th>TopHot</th>
                            <th>ViewCount</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.ID">
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.Image
                                </td>

                                <td>
                                    @item.Price
                                </td>

                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.CategoryID
                                </td>
                                <td>
                                    @item.Detail
                                </td>
                                <td>
                                    <a href="#" class="btn-active" data-id="@item.ID">@(item.Status?"Kích hoạt":"Khóa")</a>
                                </td>
                                <td>
                                    @item.TopHot
                                </td>
                                <td>
                                    @item.ViewCount
                                </td>
                                <td>
                                    <a href="/Admin/Product/Edit/@item.ID">Sửa</a>
                                    |
                                    @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn có chắc chắn xóa?",
                                   OnComplete = "$('#row_" + @item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>

                        }
                    </tbody>

                </table>

                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))
            </div>
        </div>
    </div>
</div>
